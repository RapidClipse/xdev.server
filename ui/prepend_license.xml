<!--
This buildfile is used to prepend source files with a specified license information.
Existing license information get overwritten.

It is recommended to close all source file editors in eclipse before starting this script to avoid conflicts.
-->
<project name="Prepend license" default="prepend_license_text" basedir=".">

	<property name="license.file" value="libdev/licenseHeader.txt"/>
	<property name="src.dir" location="src"/>
	
	<target name="prepend_license_text">
		<taskdef name="licenseprepender" classname="anttasks.LicenseTextPrepender" classpath="bindev"/>
		<licenseprepender inputfile="${license.file}" srcdir="${src.dir}"/>	
	</target>

</project>
